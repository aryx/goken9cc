# -*- sh -*-

all:V:	$LIB

#TODO: principia: 'ar vu' under plan9, rsc is GNU binutils specific
$LIB:	$OFILES
	ar rsc $LIB $prereq

%.$O:	$HFILES		# don't combine with following %.$O rules
%.$O:	%.c
	$CC $CFLAGS $CFLAGS_EXTRA $stem.c -o $target
%.$O:	%.s
	$AS $AFLAGS $stem.s -o $target

# to generate also y.tab.h with the token definitions
YFLAGS=-d
y.tab.h y.tab.c:	$YFILES
	$YACC $YFLAGS $prereq
lex.yy.c:	$LFILES
	$LEX $LFLAGS $prereq

# as opposed to mksyslib, we do not install the lib under ROOT/<arch>/lib
install:VQ: $LIB
uninstall:VQ:
	echo nothing to uninstall

installall:V:
	for (objtype in $CPUS)
		mk install
%.all:V:
	for (objtype in $CPUS)
		mk $stem

clean:V:
	rm -f *.[$OS] y.tab.? y.output y.error $CLEANFILES *.$O $OFILES $LIBNAME
nuke:V:
	rm -f *.[$OS] y.tab.? y.output y.error $CLEANFILES *.$O $OFILES $LIB
